generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  // shadowDatabaseUrl = env("DATABASE_URL")

}

model mari {
  id      Int      @id @default(autoincrement())
  song    String   @db.VarChar(255)
  lyrics  String   @db.Text
  created DateTime @default(now()) @db.Timestamp(0)
  Album   Album[]  @relation("album")
}

model Album {
  id        Int    @id @default(autoincrement())
  albumName String
  year      Int
  mariId    Int
  auther    mari   @relation("album", fields: [mariId], references: [id])

  @@index([mariId], map: "Album_mariId_fkey")
}
